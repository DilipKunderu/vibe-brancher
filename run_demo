#!/bin/bash
# Git Vibe Brancher - Unified Demo Launcher

echo "üåø Git Vibe Brancher - Unified Demo System"
echo "=========================================="

# Check if demo.py exists
if [ ! -f "demo.py" ]; then
    echo "‚ùå demo.py not found. Please run this script from the git-vibe-brancher directory."
    exit 1
fi

# Make demo.py executable
chmod +x demo.py

# Show demo options
echo ""
echo "Available demo types:"
echo "  1. Full Demo (comprehensive - all features)"
echo "  2. Quick Demo (basic features)"
echo "  3. Visualizer Demo (API and web server only)"
echo "  4. Help"
echo ""

# Get user choice
read -p "Choose demo type (1-4): " choice

case $choice in
    1)
        echo "üöÄ Starting Full Demo..."
        python3 demo.py --type full
        ;;
    2)
        echo "‚ö° Starting Quick Demo..."
        python3 demo.py --type quick
        ;;
    3)
        echo "üåê Starting Visualizer Demo..."
        python3 demo.py --type visualizer
        ;;
    4)
        python3 demo.py --help-demo
        ;;
    *)
        echo "‚ùå Invalid choice. Please run the script again."
        exit 1
        ;;
esac